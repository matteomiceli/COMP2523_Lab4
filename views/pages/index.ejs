<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="style.css">
  <title>Movieflix</title>
</head>

<body>
  <div class="header"><span class="subheader">Hi John,</span><br> <span class="subheader"> Welcome back üçø</span></div>
  <div class="container">
    <form>
      <fieldset class="todo-list">
        <legend class="todo-list__title">My Movie List</legend>
        <% if (from == 'form') { %>
          <% movies.forEach(movie => { %>
            <label class="todo-list__label">
              <input type="checkbox" name="" id="" />
              <i class="check"></i>
              <span>
                <%= movie %>
              </span>
            </label>
          <% }); %>
          <% } else if (from == 'query') { %>
            <% queryList.forEach(query => { %>
              <label class="todo-list__label">
                <input type="checkbox" name="" id="" />
                <i class="check"></i>
                <span>
                  <%= query %>
                </span>
              </label>
            <% }); %>
            <% } else if (from == 'noQuery') { %>
            <label class="todo-list__label">
              <label class="todo-list__label">
                <span>
                  No movies found... <a href="/">go back home</a>?
                </span>
              </label>
          <% } else { %>
            <label class="todo-list__label">
              <span>
                Please <a href="/myForm">add a movie</a> to the list
              </span>
            </label>
          <% } %>

    

      </fieldset>
    </form>
  </div>
</body>

</html>